{
  "openapi": "3.0.1",
  "info": {
    "title": "Catena-X Portal Provisioning API",
    "version": "v2"
  },
  "servers": [
    {
      "url":"https://portal-backend.dev.demo.catena-x.net",
      "description": "DEV"
    },
    {
      "url":"https://portal-backend.int.demo.catena-x.net",
      "description": "INT"
    }
  ],
  "security": [
    {
      "centralidp": [
        "openid",
        "profile"
      ]
    }
  ],
  "paths": {
    "/api/provisioning/client/setup": {
      "post": {
        "tags": [
          "Client"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ClientSetupData"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ClientSetupData"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ClientSetupData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/provisioning/identityprovider/setup": {
      "post": {
        "tags": [
          "IdentityProvider"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/IdentityProviderSetupData"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/IdentityProviderSetupData"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/IdentityProviderSetupData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "centralidp": {
        "type": "openIdConnect",
        "openIdConnectUrl": "https://catenaxdev003akssrv.germanywestcentral.cloudapp.azure.com/iamcentralidp/auth/realms/CX-Central/.well-known/openid-configuration"
      }
    },
    "schemas": {
      "ClientSetupData": {
        "type": "object",
        "properties": {
          "redirectUrl": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "IdentityProviderSetupData": {
        "type": "object",
        "properties": {
          "clientId": {
            "type": "string",
            "nullable": true
          },
          "metadataUrl": {
            "type": "string",
            "nullable": true
          },
          "clientAuthMethod": {
            "type": "string",
            "nullable": true
          },
          "clientSecret": {
            "type": "string",
            "nullable": true
          },
          "organisationName": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}